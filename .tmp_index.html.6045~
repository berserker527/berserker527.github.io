<html>
	<head>
		<title>draggable</title>
		<script type="text/javascript" src="js/jquery-1.7.2.js"></script>
		<style type="text/css">
			*{
				margin:0;
				padding:0;
				-moz-user-select: none;
				-webkit-user-select: none;
			}	
			.temp{
				position:absolute;
				top:200px;
				left:750px;
				width:150px;
				height:150px;
				border:2px solid #ccc;
			}
			.normal{
				position:absolute;
				margin:1px;
				width:98px;
				height:98px;
				background:#bef;
				/*border:1px solid #ccc;*/
				border-radius:3px;
				overflow:hidden;
				z-index:10;
			}
			.d{
				opacity:0.8;
				-webkit-box-shadow: 0px 0px 8px #ccc;
				-moz-box-shadow: 0px 0px 8px #ccc;
				cursor:move;
			}
			.tag{
				background:#dff;
				height:30px;
				line-height:30px;
				font-family: "Microsoft YaHei";
				font-size:14px;
				text-indent:10px;
				color:#148;
			}	
			.yingzi{
				position:absolute;
				top:200px;
				left:400px;
				width:300px;
				height:300px;
				background:url(img/pingtu.jpg);
				opacity:0.4;
			}
			.yingzi_{
				position:absolute;
				top:200px;
				left:400px;
				width:300px;
				height:300px;
				background:#eee;
			}
		</style>
